<%= turbo_frame_tag 'yaml_preview' do %>
  <div class="m-6 bg-[#282c34] h-full px-3 md:px-6 pb-6">
    <div data-controller="highlight" class="h-full overflow-auto scrollbar-hidden">
      <pre class="px-4 py-0">
        <code data-highlight-target="code" class="yaml hljs"><%= @yaml_document.output %></code>
      </pre>
    </div>

    <div class="text-sm flex gap-5 justify-end">
      <%= copy_to_clipboard_btn(@yaml_document.output) %>
      <%= download_button %>
    </div>
  </div>
<% end %>
